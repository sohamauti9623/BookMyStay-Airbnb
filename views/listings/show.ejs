<% layout("/layouts/boilerplate") %>

    <h3 class="text-center mt-4 mb-4">
        <%= listing.title %>
    </h3>

    <div class="container show-container">

        <div class="show-card">

            <!-- LEFT: IMAGE -->
            <div class="show-image">
                <img src="<%= listing.image %>" class="show-img" />
            </div>

            <!-- RIGHT: CONTENT -->
            <div class="show-content">

                <h2 class="show-title">
                    <%= listing.title %>
                </h2>

                <p class="show-desc">
                    <b>
                        <%= listing.description %>
                    </b>
                </p>

                <p class="show-price">
                    ‚Çπ <%= listing.price.toLocaleString("en-IN") %>
                </p>

                <p class="show-location">
                    <b>
                        <%= listing.location %>, <%= listing.country %>
                    </b>
                </p>

                <!-- ACTION BUTTONS -->
                <div class="show-actions">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger">
                        ‚úè Edit
                    </a>

                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
                        <button class="btn btn-dark">üóë Delete</button>
                    </form>
                </div>

                <hr>

                <!-- REVIEW FORM -->
                <h4>Leave a review</h4>

                <form action="/listings/<%= listing._id %>/review" method="POST" class="needs-validation" novalidate>

                    <div class="mb-3 mt-3">
                        <label for="rating" class="form-label"><b>Rating</b></label>
                        <input type="range" min="1" max="5" value="3" name="review[rating]" id="rating"
                            class="form-range" required>
                    </div>

                    <div class="mb-3 mt-3">
                        <label for="comment" class="form-label"><b>Comment</b></label>
                        <textarea class="form-control" name="review[comment]" id="comment" rows="4" required></textarea>
                        <div class="invalid-feedback">
                            Please enter a review comment
                        </div>
                    </div>

                    <button class="btn btn-outline-dark">Submit</button>
                </form>

            </div> <!-- show-content -->

        </div> <!-- show-card -->

    </div> <!-- container -->


    <hr class="mt-4">


    <!-- ALL REVIEWS SECTION -->
    <div class="container mb-5">
        <h4><b>All Reviews</b></h4>

        <div class="row">
            <% for (let review of listing.reviews) { %>
                <div class="card col-md-5 mb-3 mx-2">
                    <div class="card-body">
                        <h5 class="card-title">Soham</h5>

                        <p class="card-text">
                            <%= review.comment %>
                        </p>

                        <p class="card-text">
                            ‚≠ê <%= review.rating %> / 5
                        </p>
                    </div>
                    <form action="/listings/<%=listing._id  %>/reviews/<%= review._id  %>?_method=DELETE" method="post">
                        <button class="btn btn-sm btn-outline-dark">Delete</button>

                    </form>



                </div>
                <% } %>
        </div>
    </div>